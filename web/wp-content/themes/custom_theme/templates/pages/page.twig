    <div class="main-content-inner {% if container_option %}container-small{% endif %}">
      {{ post.content|shortcodes }}

      {% if function('comments_open') %}
      {% include 'comments.twig' %}
      {{ function('comment_form') }}
      {% endif %}
    </div>
  </div>
{% endblock %}
