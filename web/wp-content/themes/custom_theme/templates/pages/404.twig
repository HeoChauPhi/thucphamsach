{% extends 'layout.twig' %}

{% block content %}
  {% if function('has_custom_logo') %}
    {% set logo_url = custom_logo %}
  {% else %}
    {% set logo_url = site_logo_scroll %}
  {% endif %}

  <div class="container">
    <div class="block-404">
      <div class="block-404__content">
        <a href="{{ site.url }}" class="block-404__logo"><img src="{{ logo_url }}" alt=""></a>
        <h2 class="block-404__title">{{ __('Page not found', 'custom_theme') }}</h2>
        <div class="block-404__text">{{ __("The page you are looking for doesn't exist or has been moved.
        ", 'custom_theme' ) }}</div>
      </div>
    </div>
  </div>
{% endblock %}
